{
  "manifest_version": 3,
  "name": "Aegis Blocker",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Aegis Blocker"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
